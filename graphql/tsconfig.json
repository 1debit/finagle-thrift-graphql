{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": true,
    "rootDirs": [
      "src/app",
      "src/typings"
    ],
    "types": [
        "typed-graphql"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
