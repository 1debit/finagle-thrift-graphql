{
  "name": "node-client",
  "version": "1.0.0",
  "description": "A thrift client implemented as a HAPI Server",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc",
    "thrift:hello": "thrift -r --gen js:node -o ./dist ../hello-scala/src/main/thrift/hello.thrift",
    "start": "node ./dist/server.js",
    "develop": "nodemon ./dist/server.js",
    "debug": "node-debug ./dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "typescript",
    "hapi",
    "thrift"
  ],
  "author": "Nick Nance",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.0.33",
    "@types/hapi": "^13.0.36",
    "nodemon": "^1.11.0",
    "tslint": "^3.15.1",
    "typed-graphql": "^1.0.2",
    "typescript": "^2.0.3"
  },
  "dependencies": {
    "graphql-server-hapi": "^0.4.0",
    "graphql": "^0.7.2",
    "hapi": "^15.1.1",
    "thrift": "^0.9.3"
  }
}
